{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node", "express", "cors", "multer", "jsdom"]
  },
  "include": ["**/*.ts", "**/*.js", "**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
